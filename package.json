{
  "name": "vite-dapp-plugin",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/contract.cjs",
  "module": "./dist/contract.ts",
  "exports": {
    ".": {
      "import": "./dist/contract.ts",
      "require": "./dist/contract.cjs"
    },
    "./address": {
      "import": "./dist/address.ts",
      "require": "./dist/address.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.2",
    "@stylistic/eslint-plugin-ts": "^1.4.1",
    "eslint": "^8.54.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "ethers": "^6.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}