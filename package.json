{
  "name": "vite-dapp-plugin",
  "author": "0xZurvan",
  "description": "Web3 integration library built on top of ethers.js",
  "type": "module",
  "version": "0.0.0",
  "private": false,
  "types": "./dist/contract.d.ts",
  "main": "./dist/contract.cjs.js",
  "module": "./dist/contract.esm.js",
  "exports": {
    ".": {
      "types": "./dist/contract.d.ts",
      "import": "./dist/contract.esm.js",
      "require": "./dist/contract.cjs.js"
    },
    "./address": {
      "types": "./dist/address.d.ts",
      "import": "./dist/address.esm.js",
      "require": "./dist/address.cjs.js"
    },
    "./provider": {
      "types": "./dist/provider.d.ts",
      "import": "./dist/provider.esm.js",
      "require": "./dist/provider.cjs.js"
    }
  },
  "scripts": {
    "build": "tsup tsup-node ./src/core --dts --format cjs,esm --tsconfig tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "dependencies": {},
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.2",
    "@stylistic/eslint-plugin-ts": "^1.4.1",
    "eslint": "^8.54.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "tsup": "*",
    "typescript": "*",
    "vite": "^5.0.0",
    "vitest": "^0.34.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "ethers": "*"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
